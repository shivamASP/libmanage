<%= form_with(model: request) do |form| %>
  <% if request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
        <% request.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field col-5 mx-auto mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="field col-5 mx-auto mb-3">
    <%= form.label :author %>
    <%= form.text_field :author, class: 'form-control' %>
  </div>

  <div class="field col-5 mx-auto mb-3">
    <%= form.label :published_in %>
    <%= form.number_field :published_in, class: 'form-control' %>
  </div>

  <div class="field col-5 mx-auto mb-3">
    <%= form.label :volume %>
    <%= form.number_field :volume, class: 'form-control' %>
  </div>
  
  <div class="field">
    <%#= form.label :user_id %>
    <%= form.hidden_field :user_id, :value => current_user.id %>
  </div>

  <div class="actions col-5 mx-auto mb-3">
    <%= form.submit 'Request', class: 'btn btn-primary' %>
  </div>
<% end %>
