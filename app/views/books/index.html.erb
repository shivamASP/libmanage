<h1 class="text-center my-4">Available Books</h1>

<table class='table table-hover align-middle'>
  <thead class='table-info'>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published in</th>
      <th>Volume</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.published_in %></td>
        <td><%= book.volume %></td>
        <td><%= link_to 'Show', book, class: 'btn btn-outline-info btn-sm' %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-outline-secondary btn-sm' %></td>
          <td><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Request New Book', new_request_path, class: 'btn btn-outline-primary' %>
<% if user_signed_in? %>
  <%= link_to 'View Requests', requests_path, class: 'btn btn-outline-secondary mx-2' %>
<% end %>