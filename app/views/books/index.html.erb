<h1 class="text-center my-4">Available Books</h1>

<table class='table table-hover align-middle'>
  <thead class='table-info'>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published in</th>
      <th>Volume</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="fs-5"><%= book.title %></td>
        <td class="fs-5"><%= book.author %></td>
        <td class="fs-5"><%= book.published_in %></td>
        <td class="fs-5"><%= book.volume %></td>

        <td class="fs-5"><%= link_to 'Show', book, class: 'btn btn-info btn-sm' %></td>
        <% if user_signed_in? && current_user.admin %>
          <td class="fs-5"><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-secondary btn-sm' %></td>
          <td class="fs-5"><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user && current_user.admin %>
  <%= link_to 'Add New Book', new_book_path , class: 'btn btn-primary' %>
<% else %>
  <%= link_to 'Request New Book', new_request_path, class: 'btn btn-primary' %>
  <%= link_to 'View Requests', requests_path, class: 'btn btn-secondary mx-2' %>
<% end %>